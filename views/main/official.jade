      img.logo-img(src=data[1].data.logo)
    //-顶部搜索
      .search
        .search-box-con
          .search-option
            .selected-show
              span.seleted-name 门票预订
              i.icon-drop-down
              span.vertical-line |

            ul.select-ul
              li 门票预订
