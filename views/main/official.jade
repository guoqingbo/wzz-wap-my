              li 酒店预订
              li 餐饮预订
              li 特惠套餐
              //li 乡村游
          .search-box
            input.search-btn(type='text',placeholder='请输入关键字')
            span.search-go#searchBtn(data-ticketpark=ticketPark)
              i.icon-search
    //- 头部轮播
    .hs-banner
      .bg-banner
        #banner_swiper.swiper-container
          .swiper-wrapper
            each item in data[0].data.many_mig
              .swiper-slide
                  a(href=item.url)
                    img(src=item.mig)

          #banner_pagination.swiper-pagination1

    //导航栏 轮播
    if data[0].data["notice"].length>0
      .news-box
        .news-img
          img.news-zuiqiang(src="../images/index/horn.png")
          img.news-renwen(src="../images/index/hot.png")

        ul.swiper-wrapper.news-ul
          each newsTop in data[0].data["notice"]
            li.swiper-slide
