extends ../../layout

block stylesheets
    link(rel="stylesheet", href="/stylesheets/calendar.css")
    link(rel="stylesheet", href="/stylesheets/order.css")
block javascripts
    script(type='text/javascript', src='/javascripts/jquery.calendar.js')
    script(type='text/javascript', src='/javascripts/validate/jquery.validate.min.js')
    script(type='text/javascript', src='/javascripts/validate/messages_zh.min.js')
    script(type='text/javascript', src='/javascripts/validate/additional-methods.js')
    script(type='text/javascript', src='/javascripts/member/modify.js')

block content
    form(action="")#form
        ul.order-list.myorder-list
            li
                label.lab-title="游玩人"
                .order-item
                    input.order-text(type='text', name='name', placeholder='请填写姓名')
            li
                label.lab-title 手机号
                .order-item
                    input.order-text(type='tel', name='phone', placeholder='请填写手机号')
            li
                label.lab-title 证件类型
                .order-item
                    select.cert-type(name='certType')
                        each item in certType
                            option(value=item.key selected = item.value == '身份证')=item.value
            li
                label.lab-title 证件号
                .order-item
                    input.order-text.card_box(type='text', name='charNo', placeholder='请填写证件号')
                    span.c-price.camera-text
                        input(type="file" name="file" capture="camera" accept="image/*" onchange="imgUpload(this)").hide_file
                        i.font-icon.icon-iconfont-camera(style='margin-right:.1rem')
                        ="拍照识别"
            li
                label.lab-title 来源
                .order-item
                    select.come-from(name='origin')

            li
                label.lab-title 在琼居住地
                .order-item
                    select.select-addr.province-select(name='habitation1')
                        option(value="460000,海南省") 海南省
                    select.select-addr.city-select(name='habitation2')
                    select.select-addr.district-select(name='habitation3')
                        option(value="") 请选择
            li
                label.lab-title 详细地址
                .order-item
                    input.order-text(type='text', name='address', placeholder='请填详细地址')
            li
                label.lab-title 入琼时间
                .order-item
                    span.come-time(data-date='') 请输入琼时间
            li
                label.lab-title 体温测试
                .order-item
                    input.order-text(type='text', name='temperature', placeholder='请输入体温测试')
            li
                label.lab-title 体温凭证
                .order-item
                    .preview-box
                        //.deleteImg
                        //    img(src="/images/demo/foods1.jpg")
                        //    span 删除
                        button.upload-btn
                            i.iconfont.icon-iconfont-jia
                        input.ipnut-file(type="file" name="image" accept="image/*" hidden)
            li
                label.lab-title 目前健康状况
                .order-item
                    select(name='health')
                        option(value='1') 健康
                        option(value='2') 发烧咳嗽等症状
                        option(value='3') 其他
            li
                p(style='color:#000') 15天内，是否在湖北停留或路过，或是否与确诊或疑似病例有过接触。
                input(type='radio' name='contactHubei' value='T')
                span 是
                input(type='radio' name='contactHubei' value='F')
                span 否
            li
                input(type='checkbox' name='isReal')
                span(style='color:#000') 保证以上所填写内容真实有效。
        .member-handle.linkMan-btn
            a.btn.submit-btn(href='javascript:;') 保存
            a.btn(href='/member/linkMan/list') 游玩人列表
        .mask#mask
        .tips
            p
            a(href="javascript:;").queding 确定
        // 日历选择
        #calendar.calendar
