                                            //span #{item.voice}
                                            if item.voice
                                                //a.audioDetail(href='/audioDetail?voice='+item.voice) 视频介绍>
                                                a.audioDetail(href='javascript:void(0)' data-video=item.voice) 视频介绍>
                                            //span #{item.voice}
                                            //span(style=item.voice?"display:inline-block":"display:none")
                                            //  a.audioDetail(href='/audioDetail?voice='+item.voice) 视频介绍>
                                    if module === 'route' || module === 'repast'
